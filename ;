using namespace std;

const int nameLength = 40;
const int moneyDigit = 8;
const int numberMaximum = 15;
const int typeSize = 5;
const string sep = " |";
const int totalLen = nameLength + numberMaximum + typeSize + moneyDigit + sep.size() * 4;
const string sepLine = sep + string(totalLen -1, '=') + '|';


class bank {
  private:
    unsigned long long accountNumber;
    char holderName[55];
    int deposit;
    char type;
  
  public:
    void System_clear();
    void Get_data();
    void Write_data();
    void depositWithdraw(int n, int option);
    void individualRecords(unsigned long long n);
    void report() const;
    void showAccount() const; // shows the account details
    void dep(int); // Deposit func
    void draw(int x); // drawing from acc func
    unsigned long long return_acc() const; // returnaccount number 
    int returnDepo() const;
    char returnType() const;
    void ModificationData();
};


